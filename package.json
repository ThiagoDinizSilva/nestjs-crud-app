    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "lint-staged": "^15.2.7",
    "nodemon": "~2.0.4",
    "prettier": "3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ThiagoDinizSilva/nestjs-crud-app"
